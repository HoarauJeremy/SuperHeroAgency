{% extends 'base.html.twig' %}
{% import "macro/bouton.twig" as btn %}

{% block title %}{{ super_pouvoir.nom|capitalize }}{% endblock %}

{% block body %}
    
    <div class="w-auto p-5 mx-auto md:w-3/5 h-3/4">
        <div class="flex flex-col w-full my-2 md:flex-row md:justify-between">
            <h1 class="mb-2 text-4xl font-bold">Super Pouvoir</h1>
            {{ btn.retour(path('app_super_pouvoir_index')) }}
        </div>

        <div class="flex flex-col items-center p-2 md:w-3/4">
            <div class="w-full my-1 text-lg">
                <h2 class="underline">Nom :</h2>
                <p class="ml-4">{{ super_pouvoir.nom }}</p>
            </div>
            <div class="w-full my-1 text-lg">
                <h2 class="underline">Description :</h2>
                <p class="ml-4">{{ super_pouvoir.description }}</p>
            </div>
            <div class="w-full my-1 text-lg">
                <h2 class="underline">Niveau :</h2>
                <p class="ml-4">{{ super_pouvoir.niveau }}</p>
            </div>
            <div class="w-full my-1 text-lg">
                <h2 class="underline">Héros :</h2>
                <div class="ml-4">
                    <ul>
                        {% for heros in super_pouvoir.superHeroes %}
                            <li><a href="{{ path('app_super_heros_show', {'id': heros.id}) }}">{{ heros.nom|capitalize }}</a></li>
                        {% else %}
                            <li>Aucun héros n'est liée à ce pouvoir</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        {{ btn.modifier(path('app_super_pouvoir_edit', {'id': super_pouvoir.id})) }}
    
        {{ include('super_pouvoir/_delete_form.html.twig') }}
    
    </div>
    
{% endblock %}
