{% extends 'base.html.twig' %}

{% block title %}{{ super_pouvoir.nom|capitalize }}{% endblock %}

{% block body %}
    <h1>SuperPouvoir</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ super_pouvoir.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ super_pouvoir.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ super_pouvoir.description }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ super_pouvoir.niveau }}</td>
            </tr>
            <tr>
                <th>Héros</th>
                <td>
                    <ul>
                        {% for heros in super_pouvoir.superHeroes %}
                            <li><a href="{{ path('app_super_heros_show', {'id': heros.id}) }}">{{ heros.nom|capitalize }}</a></li>
                        {% else %}
                            <li>Aucun héros n'est liée à ce pouvoir</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_super_pouvoir_index') }}">back to list</a>

    <a href="{{ path('app_super_pouvoir_edit', {'id': super_pouvoir.id}) }}">edit</a>

    {{ include('super_pouvoir/_delete_form.html.twig') }}
{% endblock %}
