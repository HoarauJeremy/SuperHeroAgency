{% macro ajoutData(href, label) %}
    <a class="w-auto p-2 text-center text-black bg-white border border-white rounded" href="{{ href }}">{{ label }}</a>
{% endmacro %}

{# Bouton pour aller vers la page de modifcation #}
{% macro modifier(href) %}
    <a class="w-full px-4 py-3 mt-2 font-medium text-white bg-green-600 rounded-md shadow-lg"
    href="{{ href }}">Modifier</a>
{% endmacro %}

{# Bouton pour valider un changement #}
{% macro modification(label) %}
    <button class="w-full px-4 py-3 mt-2 font-medium text-white bg-green-400 rounded-md shadow-lg">{{ label }}</button>
{% endmacro %}

{% macro suppression() %}
    <button class="w-full px-4 py-3 mt-2 font-medium text-white bg-red-600 rounded-md shadow-lg">Supprimer</button>
{% endmacro %}

{% macro retour(href) %}
    <a class="w-full px-4 py-3 mt-2 font-medium text-white rounded-md shadow-lg bg-slate-300" href="{{ href }}">Retour</a>
{% endmacro %}