{% extends 'base.html.twig' %}
{% import "macro/bouton.twig" as btn %}
{% block title %}Statistiques{% endblock %}

{% block body %}

    <div class="w-auto p-5 mx-auto md:w-3/5 h-3/4">
        <div class="w-full my-2">
            <h1 class="mb-2 text-4xl font-bold">Statistiques</h1>
        </div>

        <div class="flex flex-col items-center w-full h-full mx-auto min-h-[83%] md:justify-between md:flex-row">
        
            <div class="flex flex-col w-1/2 px-2 py-3 m-1 border md:h-full md:w-1/4 bg-slate-800 border-slate-900">
                <form action="{{ path('app_statistiques') }}">
                    <label for="equipe">Equipe</label>
                    <select name="equipe" id="equipe">
                        <option value="">--- Veuillez choisir une équipes ---</option>
                        {% for equipe in equipes %}
                            <option value="{{ equipe.id }}">{{ equipe.nom }}</option>
                        {% endfor %}
                    </select>
                    <button 
                        class="w-full px-4 py-3 mt-2 font-medium text-white rounded-md shadow-lg bg-slate-400"
                        type="submit">Valider</button>
                    
                </form>
            </div>

            <div class="flex items-center justify-center p-2 md:w-3/4 h-3/4">
                {% if chart is not null %}
                
                    <div class="w-auto h-auto">
                        {{ render_chart(chart) }}
                    </div>
                    
                {% else %}
                    <h3>Veuillez selectioner une équipes</h3>
                {% endif %}
            </div>
        </div>
        
    </div>


{% endblock %}