{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}


{% block body %}

    <div class="w-11/12 h-auto p-1 mx-auto md:h-3/4">

        <div class="flex w-full mb-2">
            <h2 class="text-3xl font-bold font-OldNewspaperTypes">Tableau de bord</h2>
        </div>

        <div class="flex flex-col md:flex-row md:justify-around w-full h-5/6 max-h-full min-h-[75%]">
            <div class="my-3 border rounded-md min-h-60 md:min-h-0 md:w-5/12 md:my-0 bg-slate-800 border-slate-900">
                <div class="w-full px-2 py-3 border-b bg-slate-900">
                    <h3 class="text-xl font-semibold">Missions</h3>
                </div>

                <div class="overflow-auto max-h-fit min-h-[75%] mt-2">
                    <ul class="mx-1">
                    {% for mission in missions %}
                        <li class="w-full px-1 py-3 mt-1 text-lg text-black bg-gray-100 border-transparent rounded-md md:py-2 hover:border-gray-500 hover:bg-white">
                            <a class="w-full" href="{{ path('app_mission_show', {'id': mission.id}) }}">
                                {{ mission.id }} | {{ mission.titre }} | {{ mission.debut|date('d/m/Y H:i') }} - {{ mission.fin|date('d/m/Y H:i') }}
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>

            </div>
            
            <div class="flex flex-col w-full md:w-5/12">
            
                <div class="w-full mb-1 border rounded-md min-h-60 md:min-h-0 h-1/2 bg-slate-800 border-slate-900">
                    <div class="w-full p-2 border-b bg-slate-900">
                        <h3 class="text-xl font-semibold">HÃ©ros</h3>
                    </div>

                    <div class="py-2 overflow-auto h-5/6">
                        <ul class="mx-1">
                        {% for heros in super_heros %}
                            <li class="w-full px-1 py-3 mt-1 text-lg text-black bg-gray-100 border-transparent rounded-md md:py2 hover:border-gray-500 hover:bg-white">
                                <a class="w-full" href="{{ path('app_super_heros_show', {'id': heros.id}) }}">
                                    {{ heros.id }} | {{ heros.nom }} | {{ heros.estDisponible ? 'Disponible' : 'Non Disponible' }} - {{ heros.niveauEnergie }}
                                </a>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>

                </div>

                <div class="w-full mt-1 border rounded-md h-1/2 min-h-60 md:min-h-0 bg-slate-800 border-slate-900">
                    <div class="w-full p-2 border-b bg-slate-900">
                        <h3 class="text-xl font-semibold">Equipe</h3>
                    </div>

                    <div class="py-2 overflow-auto h-5/6">
                        <ul class="mx-1">
                        {% for equipe in equipes %}
                            <li class="w-full px-1 py-3 mt-1 text-lg text-black bg-gray-100 border-transparent rounded-md md:py-2 hover:border-gray-500 hover:bg-white">
                                <a class="w-full" href="{{ path('app_equipe_show', { 'id': equipe.id}) }}">
                                    {{ equipe.id }} | {{ equipe.nom }} | {{ equipe.estActif ? 'Actif' : 'Non actif' }}
                                </a>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>

                </div>
            
            </div>
        </div>

    </div>

{% endblock %}