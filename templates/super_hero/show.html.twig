{% extends 'base.html.twig' %}

{% block title %}SuperHero{% endblock %}

{% block body %}
    <h1>SuperHero</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ super_hero.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ super_hero.nom }}</td>
            </tr>
            <tr>
                <th>AlterEgo</th>
                <td>{{ super_hero.alterEgo }}</td>
            </tr>
            <tr>
                <th>EstDisponible</th>
                <td>{{ super_hero.estDisponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NiveauEnergie</th>
                <td>{{ super_hero.niveauEnergie }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ super_hero.biographie }}</td>
            </tr>
            <tr>
                <th>NomImage</th>
                <td>
                    {% if super_hero.nomImage is not null  %}
                        <img src="{{ asset('uploads/Images/' ~ super_hero.nomImage) }}" alt="{{ super_hero.nomImage }}">
                    {% else %}
                        Aucune image disponible
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ super_hero.createdAt ? super_hero.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_super_heros_index') }}">back to list</a>

    <a href="{{ path('app_super_heros_edit', {'id': super_hero.id}) }}">edit</a>

    {{ include('super_hero/_delete_form.html.twig') }}
{% endblock %}
